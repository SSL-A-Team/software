<launch>
    <!-- Just a nice file for replaying ssl logs over the bridge and through the vision filter and into a ros bag -->
    <arg name="logfile" default="./log.log"/>
    <arg name="record" default="true"/>

    <!-- must be an unzipped log -->
    <!-- required allows this to kill the setup when its done with replay -->
    <node name="ssl_log_replayer" pkg="ateam_data_conversion" exec="ssl_log_replayer_node" output="screen" required="true">
        <param name="ssl_log_path" value="$(var logfile)"/>
    </node>

    <node name="vision_filter" pkg="ateam_vision_filter" exec="ateam_vision_filter_node">
        <param name="use_sim_time" value="true"/>
    </node>

    <include file="$(find-pkg-share ateam_ui)/launch/ateam_ui_debug_launch.py"/>
    <executable cmd="chrome 127.0.0.1:3000"/>

    <executable if="$(var record)" cmd="ros2 bag record -a" output="screen"/>
</launch>
