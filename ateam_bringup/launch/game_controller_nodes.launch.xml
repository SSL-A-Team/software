<launch>
  <arg name="gc_ip_address" default=""/>
  <arg name="net_interface_address" default=""/>
  <arg name="team_name" default="A-Team"/>
  <node name="gc_multicast_bridge_node" pkg="ssl_ros_bridge" exec="gc_multicast_bridge_node" respawn="True">
    <param name="net_interface_address" value="$(var net_interface_address)"/>
    <remap from="/gc_multicast_bridge_node/referee_messages" to="/referee_messages"/>
  </node>
  <node name="team_client_node" pkg="ssl_ros_bridge" exec="team_client_node" respawn="True">
    <param name="gc_ip_address" value="$(var gc_ip_address)"/>
    <param name="team_name" value="$(var team_name)"/>
  </node>
</launch>
